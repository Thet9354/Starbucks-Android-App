<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Onboarding.RegistrationFinish_Activity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="69dp"
        android:src="@drawable/starbucks_logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Done"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanks for giving us your precious time. \nNow you are ready for an enjoyable \nmoment."
        android:textColor="@color/black"
        android:gravity="start"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textSize="15sp"/>

    <ImageView
        android:layout_width="334dp"
        android:layout_height="282dp"
        android:src="@drawable/registrationcomplete_logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_letsGo"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:text="Let's go"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"/>

</LinearLayout>