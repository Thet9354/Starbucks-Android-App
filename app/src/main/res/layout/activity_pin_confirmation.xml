<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Order.PinConfirmation_Activity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="69dp"
                    android:src="@drawable/starbucks_logo"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/back_btn"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insert your starbucks App PIN"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/editTxt_pin_1"
                    android:layout_width="48dp"
                    android:layout_height="61dp"
                    android:background="@drawable/pin_bg"
                    android:maxLength="1"
                    android:textSize="17sp"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:digits="1234567890"/>

                <EditText
                    android:id="@+id/editTxt_pin_2"
                    android:layout_width="48dp"
                    android:layout_height="61dp"
                    android:background="@drawable/pin_bg"
                    android:maxLength="1"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textSize="17sp"
                    android:layout_marginStart="20dp"
                    android:digits="1234567890"/>

                <EditText
                    android:id="@+id/editText_pin3"
                    android:layout_width="48dp"
                    android:layout_height="61dp"
                    android:background="@drawable/pin_bg"
                    android:maxLength="1"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textSize="17sp"
                    android:layout_marginStart="20dp"
                    android:digits="1234567890"/>

                <EditText
                    android:id="@+id/editTxt_pin4"
                    android:layout_width="48dp"
                    android:layout_height="61dp"
                    android:background="@drawable/pin_bg"
                    android:maxLength="1"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textSize="17sp"
                    android:layout_marginStart="20dp"
                    android:digits="1234567890"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ok"
                android:layout_width="248dp"
                android:layout_height="36dp"
                android:text="OK"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_bg"
                android:layout_marginTop="30dp"/>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>