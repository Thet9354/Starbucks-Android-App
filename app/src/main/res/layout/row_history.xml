<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgView_historyType"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/payment"/>

    <TextView
        android:id="@+id/txtView_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:layout_toRightOf="@+id/imgView_historyType"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/txtView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.28.2021"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/imgView_historyType"
        android:layout_below="@+id/txtView_type"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"/>

    <TextView
        android:id="@+id/txtView_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-$19.65"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:textSize="13sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_rewards"
        android:layout_width="46dp"
        android:layout_height="15dp"
        android:background="@drawable/button_bg"
        android:text="+5 ⭐️"
        android:backgroundTint="#DA761A"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="8sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtView_cost"
        android:layout_marginTop="8sp"/>



</RelativeLayout>