<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Order.Siren_Order_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="69dp"
                    android:src="@drawable/starbucks_logo"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/back_btn"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siren Order"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/imgView_order"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/cinnamon_dolce" />

            <TextView
                android:id="@+id/txtView_orderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cinnamon Dolce Latte"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/txtView_orderDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:gravity="start"
                android:layout_marginTop="5dp"
                android:text="We add freshly steamed milk and cinnamon dolce-flavored syrup to our classic espresso, topped with sweetened whipped cream and a cinnamon..."
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtView_seeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See more"
                android:textColor="@color/green"
                android:textSize="10sp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#808080"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtView_orderCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 19.65"
                    android:textColor="@color/green"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textSize="24sp"/>

                <RelativeLayout
                    android:layout_width="157.5dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:layout_width="157.5dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/plus_minus_bg"/>

                    <ImageView
                        android:id="@+id/imgView_minus"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="-5dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/minus"
                        android:elevation="40dp"/>

                    <TextView
                        android:id="@+id/txtView_orderQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgView_plus"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/plus"
                        android:layout_marginEnd="-7dp"
                        android:elevation="40dp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="315dp"
                    android:layout_height="50dp"
                    android:src="@drawable/hot_cold_bg"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/txtView_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔥 Hot"
                    android:textSize="13dp"
                    android:layout_marginStart="60dp"
                    android:layout_centerVertical="true"
                    android:textColor="#A3ADB2"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/imgView_hot"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hot_chosen"
                    android:layout_marginStart="-10dp"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/txtView_cold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="❄️ Cold"
                    android:textSize="13dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="60dp"
                    android:textColor="#A3ADB2"
                    android:layout_alignParentEnd="true"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/imgView_cold"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:src="@drawable/cold_chosen"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="-10dp"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="315dp"
                    android:layout_height="50dp"
                    android:src="@drawable/order_size_bg"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/txtView_order_size_short"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Short"
                    android:textStyle="bold"
                    android:textColor="#A3ADB2"
                    android:textSize="13sp"
                    android:layout_marginStart="30dp"
                    android:layout_centerVertical="true"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/imgView_short"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="-15dp"
                    android:src="@drawable/short_chosen"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txtView_order_size_tall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tall"
                    android:textStyle="bold"
                    android:textColor="#A3ADB2"
                    android:textSize="13sp"
                    android:layout_marginStart="105dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/imgView_tall"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="60dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/tall_chosen"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/txtView_order_size_grande"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grande"
                    android:textStyle="bold"
                    android:textColor="#A3ADB2"
                    android:textSize="13sp"
                    android:layout_marginEnd="95dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/imgView_grande"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="59dp"
                    android:src="@drawable/grande_chosen"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txtView_order_size_venti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Venti"
                    android:textStyle="bold"
                    android:textColor="#A3ADB2"
                    android:textSize="13sp"
                    android:layout_marginEnd="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/imgView_venti"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="-17dp"
                    android:src="@drawable/venti_chosen"
                    android:visibility="gone"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="315dp"
                android:layout_height="50dp"
                android:background="@drawable/order_size_bg"
                android:elevation="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtView_addToCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🛒 Add to cart"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginStart="25dp"
                    android:layout_gravity="center_vertical"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="30dp"
                    android:background="#A3ADB2"/>

                <TextView
                    android:id="@+id/txtView_orderNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✔️ Order Now"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="#00754A"
                    android:layout_marginStart="30dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>